    <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
    <meta http-equiv="content-language" content="en">

    <meta name="google-site-verification" content="J_A-jkvvOE0Tyruc6MhB5MxFDltbQO84579ZIVYcuyg" />
